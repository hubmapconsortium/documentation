.c-header
  pos-rel()
  background-color $col-hm-blue
  border none
  padding-top 6px
  height 90px

  &__main
    pos-rel()
    container()

  &__menu
    pos-abs()
    transform translateY(45%)

  li
    p1()
    list-style none
    display inline-block
    margin-left 15px
    margin-right 15px
    color white
    padding-top 5px


    &.h2
      h2()
      font-weight bold

    a
      color white
      text-decoration none
      font-weight bold

      &:hover
        text-decoration underline

    &:first-child
      margin-left 0

    &.c-header__logo
      margin-right 190px
      padding-top 0

      img
        pos-abs()
        top 0
        height 40px

