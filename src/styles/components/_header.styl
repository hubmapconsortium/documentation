.c-header
  pos-rel()
  background-color $col-hm-blue
  border none
  padding-top 6px
  .lg
    +md-max()
      hide()

  +lg()
    height 90px

  +md-max()
    padding 15px 0

  > .c-header__main
      display flex
      flex-wrap inherit
      align-items center
      justify-content space-between

  &__sm
    margin-left 60px
    color white
    +lg()
      hide()

  &__main
    width 90%
    margin auto
    +lg()
      pos-rel()
      container()

  &__menu
    +md-max()
      margin-top 20px
    +lg()
      pos-rel()
      margin-left 20%

  &__logo
    margin-right 50px
    padding-top 0

    img
      pos-abs()
      height 40px
      top -5px
      +md-max()
        top 20px

  li
    p1()
    color white
    +md-max()
      p3()

    &.h2
      px2em(font-size, 26)
      font-weight bold

    &.extra--right
      pos-abs()
      right 5%
      font-size 1rem

    a
      color white
      text-decoration none
      &:hover
        color white

  +lg()
    li
        p1()
        list-style none
        display inline-block
        margin-left 15px
        margin-right 15px
        color white

      a
        &:hover
          text-decoration underline

      &:first-child
        margin-left 0